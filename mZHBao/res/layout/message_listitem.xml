<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="@dimen/ListItemHeight"
         android:gravity="center_vertical"
         android:background="@drawable/message_bg"
         android:clickable="true"
          >
         <ImageView
             android:id="@+id/head"
             android:layout_width="@dimen/ListPhotoSize"
       		 android:layout_height="@dimen/ListPhotoSize"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:paddingLeft="@dimen/ListPadding"
             android:src="@drawable/usr_photo" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@id/head"
             android:padding="@dimen/ListCenterPadding"
             android:text="小黑"
             android:textColor="@color/messageUsrId" />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:padding="@dimen/ListCenterPadding"
             android:text="昨天 晚上"
             android:textColor="@color/messageDate" />
          <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@id/head"
             android:layout_alignParentBottom="true"
             android:padding="@dimen/ListCenterPadding"
             android:text="你好~~"
             android:textColor="@color/messageShortColor" />
     </RelativeLayout>

</LinearLayout>
