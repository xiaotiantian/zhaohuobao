<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
<!-- 用户ID和日期 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/formclient_row_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/chatUsrMargin"
            android:textColor="@color/chatUsrId" />

        <TextView
            android:id="@+id/formclient_row_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/chatDateMargin"
            android:textColor="@color/chatDate" />
    </LinearLayout>
<!-- 聊天内容 -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/msg_outgoing"
        android:layout_gravity="right"
         >

        <TextView
            android:id="@+id/formclient_row_msg"
            android:layout_width="wrap_content"
            android:maxWidth="@dimen/chatMsgMaxWidth"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/chatMsgMargin"
            android:layout_centerInParent="true"
            android:gravity="left|center"
            android:textSize="@dimen/chatMsgSize"
            android:textColor="@color/chatMsg" />

    </RelativeLayout>

</LinearLayout>